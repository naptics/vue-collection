{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    // all files must be included, because demo uses lib.
    "include": ["env.d.ts", "src/**/*", "src/**/*.json"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
